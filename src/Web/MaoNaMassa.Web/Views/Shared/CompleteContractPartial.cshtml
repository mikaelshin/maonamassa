@model MaoNaMassa.Web.ViewModels.Contracts.SingleContractViewModel

<div id="complete-contract" class="zoom-anim-dialog mfp-hide small-dialog-1">

    <!--Tabs -->
    <div class="sign-in-form">

        <ul class="popup-tabs-nav">
            <li><a href="#tab1">Finalizar Contrato</a></li>
        </ul>

        <div class="popup-tabs-container">

            <!-- Tab -->
            <div class="popup-tab-content" id="tab">

                <!-- Welcome Text -->
                <div class="welcome-text">
                    <h3>Você tem certeza que quer contratar o @Model.FreelancerFirstName @Model.FreelancerLastName?</h3>
                </div>

                <form id="complete-contract-form" asp-action="CompleteContract" asp-controller="Contracts">
                    <input type="text" hidden name="action" value="complete" />
                    <input type="text" hidden name="contractId" value="@Model.Id" />
                </form>

                <!-- Button -->
                <button class="margin-top-15 button w-100 button-sliding-icon ripple-effect" type="submit" form="complete-contract-form">Sim! <i class="icon-material-outline-arrow-right-alt"></i></button>
                @*<button type="submit" form="payment-form" class="button big ripple-effect margin-top-40 margin-bottom-65" id="submit" data-secret="@ViewData["ClientSecret"]">Sim! </button>*@

            </div>
        </div>
    </div>
</div>
